@model IEnumerable<GAMER.Models.Genero>

@{
    ViewData["Title"] = "Géneros";
}

<h1 class="text-center text-white">@ViewData["Title"]</h1>


@if (User.Identity.IsAuthenticated)
{
    <div class="col-md-12 text-center mb-4">
        <a asp-action="Create" class="btn" style="background-color: #e83e8c">Cargar género</a>
    </div>
}

<div class="row">
    @foreach (var genero in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="background-color: #000; color: #fff;">
                <div class="card-body">
                    <h5 class="card-title text-uppercase">@genero.Descripcion</h5>

                    <div class="mt-3">
                        <a asp-action="Details" asp-route-id="@genero.Id" class="btn btn-outline-primary">Detalles</a>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Edit" asp-route-id="@genero.Id" class="btn btn-outline-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@genero.Id" class="btn btn-outline-danger">Eliminar</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

