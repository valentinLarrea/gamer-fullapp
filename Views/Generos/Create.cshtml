@model GAMER.Models.Genero

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Cargar genero</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body bg-black text-white text-center">
        <form asp-action="ImportExcel" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="archivoExcel" class="control-label text-center">Selecciona un archivo Excel</label>
                    <input type="file" class="form-control text-center" name="archivoExcel" id="archivoExcel" style="background-color: #333; color: #ddd;" />
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Importar</button>
        </form>
        <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="control-label text-center"></label>
                    <input asp-for="Descripcion" class="form-control text-center" placeholder="Ingrese la descripcion" style="background-color: #333; color: #ddd;" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
   </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
