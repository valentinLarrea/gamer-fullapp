@model GAMER.Models.Genero

@{
    ViewData["Title"] = "Editar Género";
}

<h1 class="text-center mb-4">Editar Género</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body bg-black text-white">
        <h4 class="card-title mb-3">Detalles</h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Introduce una descripción.." />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-4">
                <input type="submit" value="Save" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
