@model GAMER.Models.Plataforma

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Cargar plataforma</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body bg-black text-white text-center">
        <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Tipo" class="control-label text-center"></label>
                    <input asp-for="Tipo" class="form-control text-center" placeholder="Ingrese el tipo.." style="background-color: #333; color: #ddd;" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
