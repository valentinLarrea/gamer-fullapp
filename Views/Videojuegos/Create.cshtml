@model GAMER.Models.Videojuego

@{
    ViewData["Title"] = "Crear Videojuego";
}

<h1 class="text-center mb-4">Cargar Videojuego</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-body bg-black text-white text-center">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Titulo" class="control-label text-center">Título</label>
                    <input asp-for="Titulo" class="form-control text-center" placeholder="Ingrese el título.."
                           style="background-color: #333; color: #ddd;" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Sinopsis" class="control-label text-center">Sinopsis</label>
                    <textarea asp-for="Sinopsis" class="form-control text-center" rows="4" placeholder="Ingrese una breve descripción.."
                              style="background-color: #333; color: #ddd;"></textarea>
                    <span asp-validation-for="Sinopsis" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Imagen" class="control-label text-center">Imagen</label>
                    <input type="file" asp-for="Imagen" class="form-control text-center" style="background-color: #333; color: #ddd;" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="GeneroId" class="control-label text-center">Género</label>
                    <select asp-for="GeneroId" class="form-control text-center" asp-items="ViewBag.GeneroId" style="background-color: #333; color: #ddd;">
                        <option value="">Seleccione un género</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DesarrolladorId" class="control-label text-center">Desarrollador</label>
                    <select asp-for="DesarrolladorId" class="form-control text-center" asp-items="ViewBag.DesarrolladorId" style="background-color: #333; color: #ddd;">
                        <option value="">Seleccione un desarrollador</option>
                    </select>
                </div>
                <div class="form-group mb-4">
                    <label for="PlataformaIds" class="control-label text-center">Plataformas</label>
                    <select multiple class="form-control text-center" id="PlataformaIds" name="PlataformaIds" style="background-color: #333; color: #ddd;">
                        @foreach (var plataforma in (IEnumerable<SelectListItem>)ViewData["PlataformaId"])
                        {
                            <option value="@plataforma.Value">@plataforma.Text</option>
                        }
                    </select>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    ::placeholder {
        color: #fff;
        opacity: 0.7;
    }
</style>


