@model GAMER.Models.Videojuego

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Editar Videojuego</h1>

<div class="card shadow-sm">
    <div class="card-body bg-black text-white">
        <h4 class="card-title mb-3">Detalles</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" placeholder="Introduce el título.." />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sinopsis" class="control-label"></label>
                <textarea asp-for="Sinopsis" class="form-control" rows="4" placeholder="Escribe una sinopsis.."></textarea>
                <span asp-validation-for="Sinopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen"></label>
                <input type="file" asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneroId" class="control-label"></label>
                <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId">
                    <option value="">Seleccione un Género</option>
                </select>
                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesarrolladorId" class="control-label"></label>
                <select asp-for="DesarrolladorId" class="form-control" asp-items="ViewBag.DesarrolladorId">
                    <option value="">Seleccione un Desarrollador</option>
                </select>
                <span asp-validation-for="DesarrolladorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PlataformaIds">Plataformas</label>
                <select multiple class="form-control" id="PlataformaIds" name="PlataformaIds">
                    @foreach (var plataforma in (IEnumerable<SelectListItem>)ViewData["PlataformaId"])
                    {
                        <option value="@plataforma.Value">@plataforma.Text</option>
                    }
                </select>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success btn-lg mt-2" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

